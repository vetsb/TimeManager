<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="AutoHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
    </style>

    <style name="EditText" parent="AutoHeight">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Spinner" parent="AutoHeight">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TvEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:textColorHint">#000000</item>
    </style>

    <style name="BtnSwipeMenu">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="InfoListRow" parent="AutoHeight">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="InfoListTitle" parent="AutoHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="InfoListValue" parent="AutoHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextViewLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="MenuRow" parent="AutoHeight">
        <item name="android:minHeight">55dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/menu_item</item>
        <item name="android:layout_marginBottom">-1dp</item>
    </style>

    <style name="MenuImage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MenuImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MenuContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MenuTextView" parent="AutoHeight">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="DialogView" parent="AutoHeight">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>
</resources>
