<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.dmitriylebyodkin.timemanager">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.TasksActivity"
            android:label="@string/tasks_activity_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AddTaskActivity"
            android:label="@string/add_task_activity_title" />
        <activity
            android:name=".Activities.TaskActivity"
            android:label="@string/task_activity_title" />
        <activity
            android:name=".Activities.RunTaskActivity"
            android:label="@string/run_task_activity_title" />
    </application>

</manifest>